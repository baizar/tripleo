<domain type="kvm">
  <name>overcloud-controller</name>
  <uuid>c525ad61-dee0-47db-9f23-21b485a66c4d</uuid>
  <memory>104857600</memory>
  <currentMemory>104857600</currentMemory>
  <vcpu>24</vcpu>
  <os>
    <type arch="x86_64">hvm</type>
    <boot dev="network"/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <cpu mode="host-passthrough"/>
  <clock offset="utc">
    <timer name="rtc" tickpolicy="catchup"/>
    <timer name="pit" tickpolicy="delay"/>
    <timer name="hpet" present="no"/>
  </clock>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/libexec/qemu-kvm</emulator>
    <disk type="file" device="disk">
      <driver name="qemu" type="qcow2"/>
      <source file="/var/lib/libvirt/images/overcloud-controller.qcow2"/>
      <target dev="sda" bus="sata"/>
    </disk>
    <controller type="usb" index="0" model="ich9-ehci1"/>
    <controller type="usb" index="0" model="ich9-uhci1">
      <master startport="0"/>
    </controller>
    <controller type="usb" index="0" model="ich9-uhci2">
      <master startport="2"/>
    </controller>
    <controller type="usb" index="0" model="ich9-uhci3">
      <master startport="4"/>
    </controller>
    <interface type="direct">
      <source dev="team0" mode="bridge"/>
      <mac address='52:54:00:d4:c0:de'/>
      <model type="virtio"/>
    </interface>
    <interface type="bridge">
      <source dev="br-control" mode="bridge"/>
      <mac address="52:54:00:b6:e2:ea"/>
      <model type="virtio"/>
    </interface>
    <input type="tablet" bus="usb"/>
    <graphics type="vnc" port="-1"/>
    <console type="pty"/>
  </devices>
</domain>
